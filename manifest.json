  "screenshots": [
    {
      "src": "dt-assets/images/pwa/screenshot-mobile-1.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Contact List View"
    },
    {
      "src": "dt-assets/images/pwa/screenshot-mobile-2.png", 
      "sizes": "375x812",
