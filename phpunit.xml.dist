<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="all">
			<directory prefix="unit-test-" suffix=".php">./tests/</directory>
			<file>./tests/after-unit-tests.php</file>
			<exclude>./tests/unit-test-sample.php</exclude>
		</testsuite>
	</testsuites>
</phpunit>
