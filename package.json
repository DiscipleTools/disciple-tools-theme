    "*.js": [
      "eslint",
      "prettier --write --ignore-unknown"
    ]
  },
  "eslintIgnore": [
    "dt-assets/build/js/scripts.min.js",
    "dt-core/dependencies/*"
  ],
  "jshintConfig": {
    "globals": {
      "jQuery": true
    }
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.18.2",
