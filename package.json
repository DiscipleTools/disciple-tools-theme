  "scripts": {
    "postinstall": "npm run build",
    "build": "gulp",
    "scripts": "gulp scripts",
    "styles": "gulp styles",
    "watch": "gulp watch",
    "browsersync": "gulp browsersync",
    "lint": "npx eslint",
    "prettier": "npx prettier --write .",
    "update-foundation": "npm install foundation-sites",
